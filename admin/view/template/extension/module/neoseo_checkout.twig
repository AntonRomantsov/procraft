                    </select>
                </div>
            </div>

            <div style="display: inline-block; width: 100%;">
                <div class="col-sm-5">
                    <label class="control-label" for="[%>table_prefix%]_field_[%>i%]_required">{{ text_required }}</label>
                </div>
                <div class="col-sm-7">
                    <select id="[%>table_prefix%]_field_[%>i%]_required" name="[%>html_field%][required]" class="select_field_display form-control">
                        <option value="0">{{ text_disabled }}</option>
                        <option value="1">{{ text_enabled }}</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</script>
<script>

    $('[name=customer_group]').change(function(e){
        $('ul.customer-type').hide();
        $('ul.' + $(this).attr('id')).show();
    });

    $('a.type-add').click(function(e) {
        e.preventDefault();
        var name = prompt('Введите название типа покупателя');
        if( name ) {
            $.ajax({
                url: 'index.php?route=extension/module/neoseo_checkout/typeadd&user_token={{ user_token }}&name=' + name,
                dataType: 'json',
                success: function(json) {
                    if( json['status'] == 0 ) {
                        location.reload();
                    }
                }
            });
        }
    });

    $('a.type-edit').click(function(e) {
        e.preventDefault();
        var id = $(this).attr('href').replace("#","");
        var name = prompt('Введите название типа покупателя');
        if( name ) {
            $.ajax({
                url: 'index.php?route=extension/module/neoseo_checkout/typeedit&user_token={{ user_token }}&name=' + name + '&id=' + id,
                dataType: 'json',
                success: function(json) {
                    if( json['status'] == 0 ) {
                        location.reload();
                    }
                }
            });
        }
    });

    $('a.type-del').click(function(e) {
        e.preventDefault();
        var id = $(this).attr('href').replace("#","");
        if( id ) {
            $.ajax({
                url: 'index.php?route=extension/module/neoseo_checkout/typedel&user_token={{ token }}&id=' + id,
                dataType: 'json',
                success: function(json) {
                    if( json['status'] == 0 ) {
                        location.reload();
                    }
                }
            });
        }
    });

    {% set i = 0 %}

    {% for type,fields in neoseo_checkout_customer_fields %}
        {% set i = 0 %}
        {% for field in fields %}
            {% if field["field"] is defined %}
                {% set i = i + 1 %}
                setFieldData("#customer_field_" + {{ type }} + "_" + {{ i }},{
                    i: {{ type }} + "_" + {{ i }},
                    html_field: 'neoseo_checkout_customer_fields[{{ type }}][{{ i }}]',
                    table_prefix: 'neoseo_checkout_customer_fields',
                    label: {{ field['label']|json_encode }},
                    field: '{{ field['field'] }}',
                    type: '{{ field['type'] }}',
                    name: '{{ field['name'] }}',
                    mask: '{{ field['mask'] }}',
                    default: '{{ field['default'] }}',
                    display: {{ field['display'] }},
                    only_register: {{ field['only_register'] }},
                    required: {{ field['required'] }}
                });
            {% endif %}
        {% endfor %}
    {% endfor %}

    {% for method in payment_methods %}
        {% set i = 0 %}
        {% if neoseo_checkout_payment_fields[method['code']] is defined %}
            {% for field in neoseo_checkout_payment_fields[method['code']] %}
                {% if field["field"] is defined %}
                    {% set i = i + 1 %}
                        setFieldData("#payment_field_{{ method.code|replace({'.': "_"}) }}_" + {{ i }}, {
                        i: {{ i }},
                        table_prefix: 'neoseo_checkout_payment_fields_{{ method.code|replace({'.': "_"}) }}',
                        html_field: 'neoseo_checkout_payment_fields[{{ method["code"] }}][{{ i }}]',
                        label: {{ field['label']|json_encode }},
                        field: '{{ field['field'] }}',
                        type: '{{ field['type'] }}',
                        name: '{{ field['name'] }}',
                        mask: '{{ field['mask'] }}',
                        default: '{{ field['default'] }}',
                        only_register: {{ field['only_register'] is defined ? field['only_register'] : 0 }},
                        display: {{ field['display'] }},
                        required: {{ field['required'] }},
                    });
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endfor %}

    {% for method in shipping_methods %}
        {% set i = 0 %}
        {% if neoseo_checkout_shipping_fields[method['code']] is defined %}
            {% for field in neoseo_checkout_shipping_fields[method['code']] %}
                {% if field["field"] is defined %}
                    {% set i = i + 1 %}
                    setFieldData("#shipping_field_{{ method.code|replace({'.': "_"}) }}_" + {{ i }}, {
                        i: {{ i }},
                        table_prefix: 'neoseo_checkout_shipping_fields_{{ method.code|replace({'.': "_"}) }}',
                        html_field: 'neoseo_checkout_shipping_fields[{{ method["code"] }}][{{ i }}]',
                        label: {{ field['label']|json_encode }},
                        field: '{{ field['field'] }}',
                        type: '{{ field['type'] }}',
                        name: '{{ field['name'] }}',
                        mask: '{{ field['mask'] }}',
                        default: '{{ field['default'] }}',
                        only_register: {{ field['only_register'] is defined ? field['only_register'] : 0 }},
                        display: {{ field['display'] }},
                        required: {{ field['required'] }},
                    });
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endfor %}

    $(document).ready(function() {
        $("#payment_methods").trigger("change");
        $("#shipping_methods").trigger("change");
        $(".select_all").click(function(){
            target = $("#" + this.id).attr("data-target");
            if( $("#" + this.id).prop("checked") ){
                $("#" + target + " input[type=checkbox]").prop("checked","checked");
            } else {
                $("#" + target + " input[type=checkbox]").prop("checked",false);
            }
        });
        $("#select_shipping_method").change(function(){
            if( this.value == "all") {
                $("#payment_for_shipping tbody tr").show();
            } else {
                $("#payment_for_shipping tbody tr").hide();
                $("#payment_for_shipping tbody tr#" + this.value.replace(/\./g,"_")).show();
            }
        });
        $("select[name=neoseo_checkout_dependency_type]").change(function(){
            $("#payment_for_shipping").hide();
            $("#shipping_for_payment").hide();
            if( this.value != "none") {
                $("#" + this.value).show();
            }
        });

        $("select[name=neoseo_checkout_dependency_type]").trigger("change");

        $(".select_field_type").change(function(){
            var baseId = this.id.substr(0,this.id.length-4);
            if( this.value == "html") {
                $("#" + baseId + "name").parents("tr").hide();
                $("#" + baseId + "mask").parents("tr").hide();
                $("#" + baseId + "required").parents("tr").hide();
            } else {
                $("#" + baseId + "name").parents("tr").show();
                $("#" + baseId + "mask").parents("tr").show();
                $("#" + baseId + "required").parents("tr").show();
            }
        });

        $(".select_field_name").change(function(){
            var baseId = this.id.substr(0,this.id.length-5);
            if ( this.value == "custom") {
                $("#" + baseId + "type").parents("tr").show();
                $("#" + baseId + "name").parents("tr").show();
                $("#" + baseId + "mask").parents("tr").show();
                $("#" + baseId + "type").trigger("change");
            } else if ( this.value == "password" || this.value == "password2" ) {
                $("#" + baseId + "type").parents("tr").hide();
                $("#" + baseId + "name").parents("tr").hide();
                $("#" + baseId + "mask").parents("tr").hide();
            } else {
                $("#" + baseId + "type").parents("tr").hide();
                $("#" + baseId + "name").parents("tr").hide();
                $("#" + baseId + "mask").parents("tr").show();
            }
        });
        $(".select_field_name").trigger("change");
    });
    $('#{{ module_sysname }}_shipping_zone_default').load('index.php?route=localisation/geo_zone/zone&user_token={{ user_token }}&country_id={{ neoseo_checkout_shipping_country_default }}&zone_id={{ neoseo_checkout_shipping_zone_default }}');

    $('#{{ module_sysname }}_shipping_country_default').on('change', function () {
        $('#{{ module_sysname }}_shipping_zone_default').load('index.php?route=localisation/geo_zone/zone&user_token={{ user_token }}&country_id=' + this.value + '&zone_id=0');
    });

    $('#{{ module_sysname }}_shipping_city_default').autocomplete({
        source: function( request, response ) {
            $.ajax({
                url: "index.php?route=localisation/neoseo_city/autocomplete_city",
                dataType: "json",
                data: {
                    country_id: $('#{{ module_sysname }}_shipping_country_default').val(),
                    zone_id: $('#{{ module_sysname }}_shipping_zone_default option:selected').val(),
                    name: request['term'],
                    user_token: '{{ user_token }}',
                },
                success: function(json) {
                    response($.map(json, function(item) {
                        return {
                            label: item['value'],
                            value: item['value'],
                            country_id: item['country_id'],
                            zone_id: item['zone_id'],
                            city: item['city'],
                        }
                    }));
                }
            });
        },
        minLength: 2,
        select: function (item) {
            if( item ) {
                $("#{{ module_sysname }}_shipping_city_default").val(item.city);
            }
        },
    });

    $('#{{ module_sysname }}_novaposhta_city_name').autocomplete({
        source: function( request, response ) {
            $.ajax({
                url: "index.php?route=extension/shipping/neoseo_novaposhta/cityautocomplete",
                dataType: "json",
                data: {
                    filter_name: request['term'],
                    user_token: '{{ user_token }}',
                },
                success: function(json) {
                    response($.map(json, function(item) {
                        return {
                            label: item['name'],
                            value: item['name'],
                            city: item['id'],
                        }
                    }));
                }
            });
        },
        minLength: 2,
        select: function (item,ui) {
            console.log(ui.item.city);
            $('#{{ module_sysname }}_shipping_novaposhta_city_default').val(ui.item.city);
        },
    });
</script>
