                            {{ widgets.dropdown('status',{0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.dropdown('agreement_id',information) }}
                            {{ widgets.dropdown('agreement_default',{0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.dropdown('agreement_text',{0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.dropdown('stock_control',{0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.input('min_amount') }}
                            {{ widgets.input('free_delivery_min_amount') }}
                            {{ widgets.dropdown('compact',{0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.dropdown('dropped_cart_template', dropped_cart_template) }}
                            {{ widgets.input('dropped_cart_email_subject') }}
                            {{ widgets.dropdown('onestep', {0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.dropdown('cart_redirect',{0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.dropdown('hide_menu',{0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.dropdown('hide_footer',{0: text_disabled, 1: text_enabled}) }}
                            {{ widgets.dropdown('use_international_phone_mask',{0: text_disabled, 1: text_enabled}) }}
                            {% else %}
                                {{ license_error }}
                            {% endif %}
