{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right form-inline">
				<button type="submit" form="form-module" name="apply" data-toggle="tooltip" title="{{ button_apply }}" class="btn btn-success"><i class="fa fa-check"></i></button>
				<button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		{% if success %}
			<div class="alert alert-success alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ success }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#tab-main" data-toggle="tab">{{ tab_main }}</a></li>
					<li><a href="#tab-license" data-toggle="tab">{{ tab_license }}</a></li>
				</ul>
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
					<div class="tab-content">
						<div class="tab-pane active form-horizontal" id="tab-main">

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status"><span class="help" title="{{ help_status }}" data-toggle="tooltip">{{ entry_status }}</span></label>
								<div class="col-sm-10">
									<select name="module_giftor_status" id="input-status" class="form-control">
										<option value="0" {{ "0" == module_giftor_status ? "selected" : "" }}>{{ text_disabled }}</option>
										<option value="1" {{ "1" == module_giftor_status ? "selected" : "" }}>{{ text_enabled }}</option>
									</select>
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label"><span class="help" title="{{ help_label }}" data-toggle="tooltip">{{ entry_label }}</span></label>
								<div class="col-sm-10">
									{% for language in languages %}
										<div class="input-group">
											<span class="input-group-addon"><img title="{{ language.name }}" src="language/{{ language.code }}/{{ language.code }}.png"/></span>
											<input type="text" name="module_giftor_label[{{ language.language_id }}]" value="{{ module_giftor_label[language.language_id] }}" class="form-control"/>
										</div>
										<br>
									{% endfor %}
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-quantity">{{ entry_quantity }}</label>
								<div class="col-sm-10">
									<select name="module_giftor_quantity" id="input-quantity" class="form-control">
										<option value="0" {{ "0" == module_giftor_quantity ? "selected" : "" }}>{{ text_quantity_multiple }}</option>
										<option value="1" {{ "1" == module_giftor_quantity ? "selected" : "" }}>{{ text_quantity_one }}</option>
									</select>
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-position"><span class="help" title="{{ help_position }}" data-toggle="tooltip">{{ entry_position }}</span></label>
								<div class="col-sm-10">
									<select name="module_giftor_position" id="input-position" class="form-control">
										<option value="0" {{ "0" == module_giftor_position ? "selected" : "" }}>{{ text_disabled }}</option>
										<option value="price" {{ "price" == module_giftor_position ? "selected" : "" }}>{{ text_before_price }}</option>
										<option value="before" {{ "before" == module_giftor_position ? "selected" : "" }}>{{ text_before_descr }}</option>
										<option value="after" {{ "after" == module_giftor_position ? "selected" : "" }}>{{ text_after_descr }}</option>
										<option value="top" {{ "top" == module_giftor_position ? "selected" : "" }}>{{ text_in_top }}</option>
										<option value="bottom" {{ "bottom" == module_giftor_position ? "selected" : "" }}>{{ text_in_bottom }}</option>
									</select>
									<small>{{ help_position_after }}</small>
								</div>
							</div>

							<div class="form-group" data-parent-id="#input-position">
								<div class="col-sm-12">
									<ul class="nav nav-tabs" id="language">
										{% for language in languages %}
										<li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
										{% endfor %}
									</ul>
									<div class="tab-content">
										{% for language in languages %}
										<div class="tab-pane" id="language{{ language.language_id }}">
										  <div class="form-group">
											<label class="col-sm-2 control-label" for="input-title{{ language.language_id }}">{{ entry_title }}</label>
											<div class="col-sm-10">
											  <input type="text" name="module_giftor_description[{{ language.language_id }}][title]" value="{{ module_giftor_description[language.language_id].title }}" placeholder="{{ entry_title }}" id="input-title{{ language.language_id }}" class="form-control" />
											  <small><strong>{{ entry_shortcode }}:</strong> {product_name} {gift_name} {gift_price} {gift_quantity} {min_order_total} {max_order_total} {date_start} {date_end}</small>
											</div>
										  </div>
										  <div class="form-group">
											<label class="col-sm-2 control-label" for="input-description{{ language.language_id }}">{{ entry_description }}</label>
											<div class="col-sm-10">
											  <textarea name="module_giftor_description[{{ language.language_id }}][description]" placeholder="{{ entry_description }}" id="input-description{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ module_giftor_description[language.language_id].description }}</textarea>
											  <small><strong>{{ entry_shortcode }}:</strong> {product_name} {gift_name} {gift_price} {gift_quantity} {min_order_total} {max_order_total} {date_start} {date_end}</small>
											</div>
										  </div>
										</div>
										{% endfor %}
									</div>
								</div>
							</div>

							<div class="form-group" data-parent-id="#input-position">
								<label class="col-sm-2 control-label" for="input-width">{{ entry_image_width }}</label>
								<div class="col-sm-10">
								  <input type="text" name="module_giftor_width" value="{{ module_giftor_width }}" placeholder="{{ entry_image_width }}" id="input-width" class="form-control" />
								</div>
							</div>

							<div class="form-group" data-parent-id="#input-position">
								<label class="col-sm-2 control-label" for="input-height">{{ entry_image_height }}</label>
								<div class="col-sm-10">
								  <input type="text" name="module_giftor_height" value="{{ module_giftor_height }}" placeholder="{{ entry_image_height }}" id="input-height" class="form-control" />
								</div>
							</div>

							<div class="form-group" data-parent-id="#input-position">
								<label class="col-sm-2 control-label" for="input-css">{{ entry_css }}</label>
								<div class="col-sm-10">
									<textarea name="module_giftor_css" placeholder="{{ entry_css }}" rows="5" id="input-css" class="form-control">{{ module_giftor_css }}</textarea>
									<span class="text-info">
									.giftor-box { background: #fafafa; padding: 12px 20px; border-radius: 5px; }<br>
									.giftor-box h3 { font-size: 18px; margin-top: 0; }
									</span>
								</div>
							</div>

						</div>
						<div class="tab-pane form-horizontal" id="tab-license">
							<div class="form-group">
								<label class="col-sm-2"></label>
								<div class="col-sm-10">
									{{ text_copyright }}
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<script><!--
function visibility(selector = '.form-group'){
	$.each($(selector), function(index, item){
		var parent = $(item).data('parent-id');
		if (parent) {
			if ($(parent).val() != 0 && $(parent).is(':visible')) {
				$(item).css('background', '#e9f1fe').show(400);
			} else {
				$(item).hide(400);
			}
		}
	});
}

$(document).ready(function(){
	$('#language a:first').tab('show');

	setInterval('visibility()', 500);
});
//--></script>

