          <div class="product__like">
            <svg class="product__like-item product-like-{{ product.product_id }}{% if product.wl_class %} product__like-active{% endif %}" viewBox="0 0 24 21" fill="none" xmlns="http://www.w3.org/2000/svg" id="product-like-{{ product.product_id }}" {% if not product.wl_class %}onclick="wishlist.add({{ product.product_id }})"{% else %}onclick="wishlist.remove({{ product.product_id }})"{% endif %}>
