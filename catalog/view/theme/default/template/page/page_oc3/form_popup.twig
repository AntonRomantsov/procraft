<div id="FormModal" class="modal fade" role="dialog">
  <div class="modal-dialog {{ popup_size }}">
    <div class="modal-content" style="position:relative; z-index: 1000;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{ heading_title }}</h4>
      </div>
      <div class="modal-body">
        {{ description|trim }}
        <div class="form-horizontal">
          <fieldset id="mainpageform" class="pageform">
            {% if fieldset_title %}
            <legend>{{ fieldset_title }}</legend>
            {% endif %}

            <div class="hide" style="display: none">
              <span class="text_processing">{{ text_processing }}</span>
              <span class="text_select">{{ text_select }}</span>
              <span class="text_none">{{ text_none }}</span>
            </div>

            <div class="row">
              {% include include_fields_file %}
            </div>

            <div class="cicaptcha">
              {{ captcha }}
            </div>

            <div class="buttons">
              <div class="pull-right">
                {% if reset_button %}
                <button type="button" class="btn btn-default button" id="button-popup-formreset"><i class="fa fa-refresh"></i> {{ button_reset }}</button>
                {% endif %}
                <button type="button" class="btn btn-primary button" id="button-submit-formpopup" onclick="FORMBUILDER.add('{{ page_form_id }}');" {{ product_id ? 'data-product-id='~ product_id : '' }}>{{ button_continue }}</button>
              </div>
            </div>
          </fieldset>
        </div>
        {{ bottom_description|trim }}
      </div>
    </div>
  </div>
