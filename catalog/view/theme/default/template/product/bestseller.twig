{{ header }}
<div id="product-bestseller" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
	<div class="row">{{ column_left }}
{% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% set class_col = 'product-layout product-grid col-lg-6 col-md-6 col-sm-12 col-xs-12' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% set class_col = 'product-layout product-grid col-lg-4 col-md-4 col-sm-6 col-xs-12' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% set class_col = 'product-layout product-grid col-lg-3 col-md-3 col-sm-6 col-xs-12' %}
    {% endif %}
		<div id="content" class="{{ class }}">{{ content_top }}
			<h1>{{ heading_title }}</h1>
			{% if products %}
			<div class="row category-products"> {% for product in products %}      
        <div class="category-product {{ class_col }} {% if product.stock_id == 5 and product.quantity < 1 %}out-of-stock{% endif %} product-mobile-none">
          <div class="product-thumb">
            <div class="image">{% if product.is_rotate %}<span class="three_de_cover"></span>{% endif %}<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
            <div class="category-product__inner">
              <div class="caption">
                <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                <div class="category-product__rating">
                  <div class="rating"> {% for i in 1..5 %}
                    {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>{% endif %}
                    {% endfor %} 
                  </div>
                  <span class="category-product__rating-total">{{ product.reviews }}</span>
                </div>
                {% if product.stock_id == 5 and product.quantity < 1 %}
                <a class="product-actions__form-btn" href="javascript:OpenFormBuilderPopup(2);">{{ text_form_stock }}</a>
                {% else %}
                {% if product.price %}
                <p class="price"> {% if not product.special %}
                  {{ product.price }}
                  {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
                  <span class="tb_label_special">-{{ product.percent }}%</span> {% endif %}
                  {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %} </p>
                {% endif %}
                {% endif %}
                </div>
                {% if product.wl_class %}
                  <button class="category-product__heart {{ product.wl_class }}" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                {% else %}
                  <button class="category-product__heart {{ product.wl_class }}" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}', $(this));"><i class="fa fa-heart-o"></i></button>
                {% endif %}
            </div>
          </div>
          <div class="category-product__footer">
            {% if product.stock_id == 5 and product.quantity < 1 %}
            {% else %}
            <button class="btn btn-primary category-product__btn" type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');"><i class="fa fa-shopping-cart hidden-lg"></i> <span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span></button>
            {% endif %}
            {% if product.attributes %}  
            <div class="category-product__attributes">
              {% for attribute_group in product['attributes'] %} 
              {% for i, attribute in attribute_group['attribute'] %} 
              {% if (i < 4) %} 
                <div class="category-product__attribute"><span>{{ attribute['name'] }}</span>  {{ attribute['text'] }} </div>
              {% endif %} 
              {% endfor %}
              {% endfor %}
            </div>
            {% endif %}
          </div>
        </div>
        {% endfor %} 
        {% for product in products %} 
        <div class="category-product {{ class_col }} {% if product.stock_id == 5 and product.quantity < 1 %}out-of-stock{% endif %} product-desctop-none">
          <div class="product-thumb">
            <div class="mobile-left-side">
            <div class="image">{% if product.is_rotate %}<span class="three_de_cover"></span>{% endif %}<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
            <div class="category-product__rating">
              <div class="rating"> {% for i in 1..5 %}
                    {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>{% endif %}
                    {% endfor %} 
                    <span class="category-product__rating-total">{{ product.reviews }}</span>
                  </div>
            </div>
                </div>
            <div class="category-product__inner">
              <div class="caption">
                <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                
                {% if product.attributes %}  
            <div class="category-product__attributes">
              {% for attribute_group in product['attributes'] %} 
              {% for i, attribute in attribute_group['attribute'] %} 
              {% if (i < 4) %} 
                <div class="category-product__attribute"><span>{{ attribute['name'] }}</span>  {{ attribute['text'] }} </div>
              {% endif %} 
              {% endfor %}
              {% endfor %}
            </div>
            {% endif %}
            <div class="price-wrap">
                {% if product.stock_id == 5 and product.quantity < 1 %}
                <a class="product-actions__form-btn" href="javascript:OpenFormBuilderPopup(2);">{{ text_form_stock }}</a>
                {% else %}
                {% if product.price %}
                <p class="price"> {% if not product.special %}
                  {{ product.price }}
                  {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
                  <span class="tb_label_special">-{{ product.percent }}%</span> {% endif %}
                  {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %} </p>
                {% endif %}
                {% endif %}
                {% if product.stock_id == 5 and product.quantity < 1 %}
                {% else %}
                <button class="btn btn-primary category-product__btn" type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');"><i class="fa fa-shopping-cart hidden-lg"></i> <span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span></button>
                {% endif %}
              </div>
                </div>
                {% if product.wl_class %}
                  <button class="category-product__heart {{ product.wl_class }}" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                {% else %}
                  <button class="category-product__heart {{ product.wl_class }}" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}', $(this));"><i class="fa fa-heart-o"></i></button>
                {% endif %}
            </div>
            
          </div>
          <div class="category-product__footer">
            {% if product.stock_id == 5 and product.quantity < 1 %}
            {% else %}
            <!-- <button class="btn btn-primary category-product__btn" type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');"><i class="fa fa-shopping-cart hidden-lg"></i> <span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span></button> -->
            {% endif %}
            
          </div>
        </div>
        {% endfor %} </div>
<!-- 				<div class="row">
					<div class="col-sm-12 text-center">{{ pagination }}</div>
					<div class="col-sm-6 text-right">{{ results }}</div>
				</div> -->
			{% else %}
				<p>{{ text_empty }}</p>
				<div class="buttons">
					<div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
				</div>
			{% endif %}
			{{ content_bottom }}</div>
			{{ column_right }}</div>
</div>
{{ footer }}
