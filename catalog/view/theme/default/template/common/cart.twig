<div id="cart" class="header-cart">
  <button type="button" data-loading-text="{{ text_loading }}" class="btn-link header-actions__link header-cart__btn" onclick="call_cp(false,'load');">
		<svg class="svg-icon"><use xlink:href="/image/sprite.svg#cart"></use></svg>
		<span>{{ count_cart }}</span>
	</button>
  <ul class="dropdown-menu pull-right">
   <div class="header-cart-title">{{ text_in_cart }}</div>
    {% if products or vouchers %}
    <li>
      <table class="table">
        {% for product in products %}
        <tr>
          <td class="text-center header-cart-img">{% if product.thumb %} <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail" /></a> {% endif %}</td>
          <td class="text-left header-cart-name"><a href="{{ product.href }}">{{ product.name }}</a> {% if product.option %}
            {% for option in product.option %} <br />
            - <small>{{ option.name }} {{ option.value }}</small> {% endfor %}
            {% endif %}
            {% if product.recurring %} <br />
            - <small>{{ text_recurring }} {{ product.recurring }}</small> {% endif %}
            <p class="header-class-quantity"><small>{{ product.quantity }} шт.</small> </p></td>
          {# <td class="text-right">x {{ product.quantity }}</td> #}
          {% if product.old_price %}
          <td class="text-right header-right-price"><div class="product-checkout__new-price">{{ product.total }}</div>
          <div class="product-checkout__old-price" style="text-decoration: line-through;">{{ product.old_total }}</div></td>
          {% else %}
          <td class="text-right header-right-price">{{ product.total }}</td>
          {% endif %}
          {# <td class="text-center"><button type="button" onclick="cart.remove('{{ product.cart_id }}');" title="{{ button_remove }}" class="btn del-button btn-xs"><i class="fa fa-times"></i></button></td> #}
        </tr>
        {% endfor %}
        {% for voucher in vouchers %}
        <tr>
          <td class="text-center"></td>
          <td class="text-left">{{ voucher.description }}</td>
          <td class="text-right">x&nbsp;1</td>
          <td class="text-right">{{ voucher.amount }}</td>
          {# <td class="text-center text-danger"><button type="button" onclick="voucher.remove('{{ voucher.key }}');" title="{{ button_remove }}" class="btn del-button btn-xs"><i class="fa fa-times"></i></button></td> #}
        </tr>
        {% endfor %}
      </table>
    </li>
    <li>
      <div>
        {# <table class="table table-bordered">
          {% for total in totals %}
          <tr>
            <td class="text-right"><strong>{{ total.title }}</strong></td>
            <td class="text-right">{{ total.text }}</td>
          </tr>
          {% endfor %}
        </table> #}
        <p class="header-cart-totals">
          <span>{{ text_total }}<br/><span style="font-size: 18px;">{{ all_total.text }}</span></span>
          <a href="{{ checkout }}" type="button" class="checkout-button"> {{ text_checkout }}</a></p>
        <div class="continue-shopping"><span class="pull-right">{{ text_csh }}</span></div>
      </div>
    </li>
    {% else %}
    <li>
      <p class="text-center">{{ text_empty }}</p>
    </li>
    {% endif %}
  </ul>
</div>
